<div class="small-12 column">
  <h2>Sign up</h2>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'small-12 column' }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.email_field :email, placeholder: 'Email' %></div>

  <div><%= f.password_field :password, placeholder: 'Password' %></div>

  <div><%= f.password_field :password_confirmation, placeholder: 'Password Confirmation' %></div>

  <div><%= f.submit "Sign up", class: 'button small-12' %></div>
<% end %>

<div class="small-12 column">
  <%= render "devise/shared/links" %>
</div>
