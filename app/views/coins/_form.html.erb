<% if chest.id %>
  <%= form_for [chest, coin], html: { class: 'small-12 column'} do |f| %>
    <%= render "shared/error_messages", m: coin %>
    <%= render "default_form_fields", coin: coin, f: f %>

    <%= f.submit (is_new)? 'Create': 'Edit', class: 'button success' %>
    <%= link_to 'Back', chest_path(chest) %>
  <% end %>
<% else %>
  <%= form_for coin, html: { class: 'small-12 column'} do |f| %>
    <%= render "shared/error_messages", m: coin %>
    <%= f.label :chest %>
    <%= f.select :chest_id, transform_for_select(chests, :id, :name), { include_blank: true } %>
    <%= render "default_form_fields", coin: coin, f: f %>

    <%= f.submit (is_new)? 'Create': 'Edit', class: 'button success' %>
    <%= link_to 'Back', coins_path %>
  <% end %>
<% end %>

